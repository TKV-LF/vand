                  },
                  "password": {
                    "type": "string"
                  }
                },
                "required": ["email", "password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful login",
            "content": {
              "application/json": {
                "example": {
                  "accessToken": "your-access-token",
                  "refreshToken": "your-refresh-token",
                  "expiryDate": "2023-09-30T00:00:00Z"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
